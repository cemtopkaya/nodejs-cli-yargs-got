    // "--require",
    // "esm",
    // "--require",
    // "${workspaceFolder}/test/mocha-setup.js",
    // "--reporter",
    // "dot",

    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests 1",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                // "--slow",
                // "5000",
                "-u",
                "bdd",
                "--colors",
                "${workspaceFolder}/test/**/*.spec.js",
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/nrf.js"
        },
        {
            "name": "Mocha Tests DEBUG",
            "args": [
                "-u",
                "bdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/test/**/*.spec.js",
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "DEBUG_TEST":"true",
                "NODE_ENV":"dev"
            },
            "type": "pwa-node"
        },
        {
            "name": "Mocha Tests",
            "args": [
                "-u",
                "bdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/test/**/*.spec.js",
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        }
    ]
}